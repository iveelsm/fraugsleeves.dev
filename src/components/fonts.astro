---
import { getFontsCss } from "../integrations/fonts";

// Filter to only include Berkeley Mono Variable fonts (matching astro.config.mjs)
const fontFilter = (filename: string) =>
	filename.toLowerCase().includes("variable") ||
	filename.toLowerCase().includes("garamond");

const fontsCss = getFontsCss({ filter: fontFilter });
---

{fontsCss && <style is:inline set:html={fontsCss} />}

