---
import Fonts from "../components/fonts.astro";
import SEO from "../components/seo.astro";
import Rss from "../components/rss.astro";
import Body from "./body.astro";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	alt?: string;
	article?: {
		publishedTime: string;
		modifiedTime?: string;
		authors: string[];
		tags: string[];
	};
	class?: string;
}

const {
	title,
	description,
	image,
	alt,
	article,
	class: className,
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<Fonts />
		<Rss />
		<SEO
			title={title}
			description={description}
			image={image}
			alt={alt}
			article={article}
		/>
		<slot name="head" />
	</head>
	<Body class={className}>
		<slot />
	</Body>
</html>
