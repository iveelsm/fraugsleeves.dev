		"prettier": "3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-css-order": "^2.2.0",
		"reading-time": "^1.5.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.20.0",
		"vitest": "^4.0.18"
	},
	"optionalDependencies": {
		"@iveelsm/fonts": "^0.2.0"
