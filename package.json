		"astro-pagefind": "^1.8.5",
		"astro-seo": "^1.1.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.0",
		"@lhci/cli": "^0.15.0",
		"@playwright/test": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
